<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:core="sap.ui.core"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Table
		id="tableProducts"
		items="{servicesAndProducts>/Products}"
	>
		<headerToolbar>
			<Toolbar>
				<Button
					icon="sap-icon://edit"
					text="{i18n>edit}"
					press="edit"
				/>
				<Button
					icon="sap-icon://add"
					text="{i18n>item}"
					press="addRow"
				/>
				<!-- <Button
													icon="sap-icon://display"
													text="Row"
													press="fetchRecords"
												/> -->
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column width="50px"/>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				width="280px"
			>
				<Text text="{i18n>description}"/>
			</Column>
			<Column width="130px">
				<Text text="{i18n>category}"/>
			</Column>
			<Column
				width="100px"
				minScreenWidth="Tablet"
				demandPopin="true"
			>
				<Text text="{i18n>quantity}"/>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				width="80px"
			>
				<Text text="{i18n>unit}"/>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				width="100px"
			>
				<Text text="{i18n>value}"/>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				width="100px"
			>
				<Text text="{i18n>total}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Button
						icon="sap-icon://delete"
						press="deleteRow"
						type="Reject"
					/>
					<!-- <Input value="{Category}"/> -->
					<Input
						id="InputDescription"
						value="{servicesAndProducts>Description}"
						showClearIcon="true"
						required="true"
						showSuggestion="true"
						suggestionItems="{
							path: '/ZshLzSrvPrdSet',
							templateShareable: false
						}"
						change="_onChangeDescription"
					>
						<suggestionItems>
							<core:ListItem
								key="{Description}"
								text="{Description}"
								additionalText="{Value}"
							/>
						</suggestionItems>
					</Input>
					<ComboBox
						id="multiComboBox"
						customData:hasValue="true"
						value=""
						selectedKey="{servicesAndProducts>Category}"
					>
						<core:Item
							key="SRV"
							text="ServiÃ§o"
						/>
						<core:Item
							key="PRT"
							text="Produto"
						/>
					</ComboBox>
					<Input
						value="{servicesAndProducts>Quantity}"
						change="_onChangeQuantity"
						type="Number"
						showClearIcon="true"
						required="true"
					/>
					<Input
						id="InputUnit"
						value="{servicesAndProducts>Unit}"
						showClearIcon="true"
						required="true"
						showSuggestion="true"
						suggestionItems="{
							path: '/HT006Set',
							templateShareable: false
						}"
					>
						<suggestionItems>
							<core:ListItem
								key="{Msehi}"
								text="{Msehi}"
								additionalText="{Msehl}"
							/>
						</suggestionItems>
					</Input>
					<Input
						id="InputValue"
						value="{servicesAndProducts>Value}"
						type="Number"
						showClearIcon="true"
						change="_onChangeQuantity"
						required="true"
					/>
					<Input
						value="{servicesAndProducts>Total}"
						type="Number"
						showClearIcon="true"
						change="_onChangeTotal"
						required="true"
					/>
					<!-- <Input value="{
														parts: [{
															path: 'servicesAndProducts>Value'
														}],
														type: 'sap.ui.model.type.Currency',
														formatOptions: {
															showMeasure: false
														}
													}"/> -->
					<!-- <ObjectNumber number="{servicesAndProducts>Total}"/> -->
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</c:FragmentDefinition>