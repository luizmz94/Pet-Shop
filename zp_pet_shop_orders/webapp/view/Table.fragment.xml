<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:core="sap.ui.core"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<Table
		id="tableProducts"
		items="{servicesAndProducts>/Products}"
		growing="true"
		growingThreshold="10"
	>
		<headerToolbar>
			<Toolbar>
				<Button
					icon="sap-icon://edit"
					text="{i18n>edit}"
					press="onEdit"
					visible="{objectView>/editButtonVisible}"
				/>
				<Button
					icon="sap-icon://save"
					text="{i18n>save}"
					press="onSave"
					visible="{objectView>/saveButtonVisible}"
				/>
				<Button
					icon="sap-icon://add"
					text="{i18n>item}"
					press="addRow"
					visible="{objectView>/addButtonVisible}"
				/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column width="50px"/>
			<!-- <Column width="75px">
				<Text text="Id"/>
			</Column> -->
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				width="280px"
			>
				<Text text="{i18n>description}"/>
			</Column>
			<Column width="130px">
				<Text text="{i18n>category}"/>
			</Column>
			<Column
				width="100px"
				minScreenWidth="Tablet"
				demandPopin="true"
			>
				<Text text="{i18n>quantity}"/>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				width="80px"
			>
				<Text text="{i18n>unit}"/>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				width="100px"
			>
				<Text text="{i18n>value}"/>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				width="100px"
			>
				<Text text="{i18n>total}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Button
						icon="sap-icon://delete"
						press="deleteRow"
						type="Reject"
					/>
					<!-- <Input value="{Category}"/> -->
					<!-- <Text
						id="ServiceproductidT"
						text="{servicesAndProducts>Serviceproductid}"
					/> -->
					<Text
						id="InputDescription"
						text="{servicesAndProducts>Description}"
					/>
					<Text text="{
						path: 'servicesAndProducts>Category',
						formatter: '.formatter.category'
					}"/>
					<!-- <ObjectNumber number="{
						path: 'servicesAndProducts>Quantity',
						type: 'sap.ui.model.type.String',
						formatOptions: {
							showMeasure: false
						}
					}"/> -->

					<Text text="{
						path: 'servicesAndProducts>Quantity',
						type: 'sap.ui.model.type.Float'

					}"/>

					<Text text="{servicesAndProducts>Unit}"/>
					<!-- <ObjectNumber number="{
						path: 'servicesAndProducts>Value',
						type: 'sap.ui.model.type.String',
						formatOptions: {
							showMeasure: false
						}
					}"/> -->
					<!-- <ObjectNumber
						number="{
							parts: [{
								path: 'servicesAndProducts>Value'
							}, {
								path: 'servicesAndProducts>Value'
							}],
							type: 'sap.ui.model.type.Currency',
							formatOptions: {
								showMeasure: false
							}
						}"
						unit="BRL"
					/> -->

					<Text text="{
						path: 'servicesAndProducts>Value',
						type: 'sap.ui.model.type.Float'

					}"/>

					<!-- <ObjectNumber
						number="{
							parts: [{
								path: 'servicesAndProducts>Total'
							}, {
								path: 'servicesAndProducts>Total'
							}],
							type: 'sap.ui.model.type.Currency',
							formatOptions: {
								showMeasure: false
							}
						}"
						unit="BRL"
					/> -->
					<!-- <ObjectNumber number="{
						path: 'servicesAndProducts>Total',
						type: 'sap.ui.model.type.Number',
						formatOptions: {
							showMeasure: false
						}
					}"/> -->
					<Text text="{
						path: 'servicesAndProducts>Total',
						type: 'sap.ui.model.type.Float'

					}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</c:FragmentDefinition>