<mvc:View
	controllerName="petshop.zppetshoporders.controller.OrderCreate"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:t="sap.ui.table"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	height="100%"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:l="sap.ui.layout"
>
	<Page
		enableScrolling="true"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<content>
			<VBox fitContainer="true">
				<f:SimpleForm
					id="SimpleFormDisplay480"
					minWidth="1024"
					maxContainerCols="2"
					editable="true"
					layout="ResponsiveGridLayout"
					title="{i18n>orderCreate}"
					labelSpanXL="3"
					labelSpanL="3"
					labelSpanM="3"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="4"
					emptySpanL="4"
					emptySpanM="4"
					emptySpanS="0"
					columnsXL="1"
					columnsL="1"
					columnsM="1"
				>
					<f:content>
						<c:Title text="{i18n>header}"/>
						<Label text="{/#Animals/Name/@sap:label}"/>
						<Input
							id="animalName"
							showSuggestion="true"
							showValueHelp="true"
							valueHelpRequest=".onValueHelpRequest"
							suggestionItems="{/AnimalsValueHelpSet}"
							change=".onAnimalNameChange"
						>
							<suggestionItems>
								<core:Item
									key="{Name}"
									text="{Name}"
								/>
							</suggestionItems>
						</Input>
						<Label text="{/#Animals/Id/@sap:label}"/>
						<Text id="animalId"/>
						<Label text="{/#Customers/Name/@sap:label}"/>
						<Text id="customerName"/>
					</f:content>
					<f:layoutData>
						<FlexItemData
							shrinkFactor="0"
							backgroundDesign="Solid"
							styleClass="sapContrastPlus"
						/>
					</f:layoutData>
				</f:SimpleForm>
				<Table
					id="tableProducts"
					items="{servicesAndProducts>/Products}"
				>
					<headerToolbar>
						<Toolbar>
							<Button
								icon="sap-icon://add"
								text="{i18n>	}"
								press="addRow"
							/>
							<!-- <Button
													icon="sap-icon://display"
													text="Row"
													press="fetchRecords"
												/> -->
						</Toolbar>
					</headerToolbar>
					<columns>
						<Column width="50px"/>
						<Column
							minScreenWidth="Tablet"
							demandPopin="true"
							width="280px"
						>
							<Text text="{i18n>description}"/>
						</Column>
						<Column width="130px">
							<Text text="{i18n>category}"/>
						</Column>
						<Column
							width="100px"
							minScreenWidth="Tablet"
							demandPopin="true"
						>
							<Text text="{i18n>quantity}"/>
						</Column>
						<Column
							minScreenWidth="Tablet"
							demandPopin="true"
							width="80px"
						>
							<Text text="{i18n>unit}"/>
						</Column>
						<Column
							minScreenWidth="Tablet"
							demandPopin="true"
							width="100px"
						>
							<Text text="{i18n>value}"/>
						</Column>
						<Column
							minScreenWidth="Tablet"
							demandPopin="true"
							width="100px"
						>
							<Text text="{i18n>total}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Button
									icon="sap-icon://delete"
									press="deleteRow"
									type="Reject"
								/>
								<!-- <Input value="{Category}"/> -->
								<Input
									id="InputDescriptionOrderCreate"
									value="{servicesAndProducts>Description}"
									showClearIcon="true"
									required="true"
									showSuggestion="true"
									suggestionItems="{
										path: '/ZshLzSrvPrdSet',
										templateShareable: false
									}"
									change="_onChangeDescription"
								>
									<suggestionItems>
										<core:ListItem
											key="{Description}"
											text="{Description}"
											additionalText="{Value}"
										/>
									</suggestionItems>
								</Input>
								<ComboBox
									id="multiComboBox"
									customData:hasValue="true"
									value=""
									selectedKey="{servicesAndProducts>Category}"
								>
									<core:Item
										key="SRV"
										text="ServiÃ§o"
									/>
									<core:Item
										key="PRT"
										text="Produto"
									/>
								</ComboBox>
								<Input
									value="{servicesAndProducts>Quantity}"
									change="_onChangeQuantity"
									type="Number"
									showClearIcon="true"
									required="true"
								/>
								<Input
									id="InputUnit"
									value="{servicesAndProducts>Unit}"
									showClearIcon="true"
									required="true"
									showSuggestion="true"
									suggestionItems="{
										path: '/HT006Set',
										templateShareable: false
									}"
								>
									<suggestionItems>
										<core:ListItem
											key="{Msehi}"
											text="{Msehi}"
											additionalText="{Msehl}"
										/>
									</suggestionItems>
								</Input>
								<Input
									id="InputValue"
									value="{servicesAndProducts>Value}"
									type="Number"
									showClearIcon="true"
									change="_onChangeQuantity"
									required="true"
								/>
								<Input
									value="{servicesAndProducts>Total}"
									type="Number"
									showClearIcon="true"
									change="_onChangeTotal"
									required="true"
								/>
								<!-- <Input value="{
														parts: [{
															path: 'servicesAndProducts>Value'
														}],
														type: 'sap.ui.model.type.Currency',
														formatOptions: {
															showMeasure: false
														}
													}"/> -->
								<!-- <ObjectNumber number="{servicesAndProducts>Total}"/> -->
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</content>
		<footer>
			<OverflowToolbar visible="{createOrderView>/showFooter}">
				<content>
					<Button
						icon="{createOrderView>/messageIcon}"
						text="{=${message>/}.length}"
						visible="{=${message>/}.length > 0}"
						type="Emphasized"
						press="onMessagePopoverPress"
					/>
					<Button
						text="Clear"
						press="onClearMessages"
						visible="{=${message>/}.length > 0}"
					/>
					<ToolbarSpacer/>
					<ToolbarSpacer/>
					<Button
						type="Emphasized"
						text="{i18n>save}"
						press="_saveOrder"
					/>
					<Button
						text="{i18n>clear}"
						press="_clearOrderTable"
					/>
				</content>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>