<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<ResponsivePopover
		id="myPopover"
		class="sapUiContentPadding"
		placement="Auto"
        verticalScrolling="false"
        showHeader="false"
	>
		<beginButton>
			<Button
				text="Capture Photo"
				press="handleCloseButton"
			/>
		</beginButton>
		<endButton>
			<Button
				text="Cancel"
				press="handleCloseButton"
			/>
		</endButton>
	</ResponsivePopover>
</core:FragmentDefinition>