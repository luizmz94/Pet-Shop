<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	controllerName="petshop.zppetshopanimals.controller.Order"
	height="100%"
	xmlns:semantic="sap.f.semantic"
	xmlns:core="sap.ui.core"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
	<!-- <m:Page
		showNavButton="true"
		navButtonPress="onNavBack"
		
	> -->
	<semantic:SemanticPage
		id="detailPage"
		busy="{orderView>/busy}"
		busyIndicatorDelay="{orderView>/delay}"
	>
		<semantic:closeAction>
			<semantic:CloseAction
				id="closeColumn"
				press=".onNavBack"
			/>
		</semantic:closeAction>
		<semantic:fullScreenAction>
			<semantic:FullScreenAction
				id="enterFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
				press=".toggleFullScreen"
			/>
		</semantic:fullScreenAction>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction
				id="exitFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
				press=".toggleFullScreen"
			/>
		</semantic:exitFullScreenAction>
		<semantic:content>
			<ObjectPageLayout
				id="ObjectPageLayout"
				enableLazyLoading="true"
				useIconTabBar="true"
				showTitleInHeaderContent="true"
				selectedSection="create"
				upperCaseAnchorBar="false"
				showFooter="{orderView>/showFooter}"
			>
				<headerTitle>
					<ObjectPageDynamicHeaderTitle>
						<expandedHeading>
							<m:Title
								text="{Name}"
								wrapping="true"
							/>
						</expandedHeading>
						<snappedHeading>
							<m:FlexBox
								fitContainer="true"
								alignItems="Center"
							>
								<m:Avatar
									src="https://www.petz.com.br/blog/wp-content/uploads/2019/04/quantos-anos-vive-um-gatinho.jpg"
									class="sapUiTinyMarginEnd"
								/>
								<m:Title
									text="{Name}"
									wrapping="true"
								/>
							</m:FlexBox>
						</snappedHeading>
						<expandedContent>
							<m:Text text="{Species}"/>
						</expandedContent>
						<snappedContent>
							<m:Text text="{Species}"/>
						</snappedContent>
						<snappedTitleOnMobile>
							<m:Title text="{Species}"/>
						</snappedTitleOnMobile>
						<actions>
							<m:Button
								text="Edit"
								type="Emphasized"
							/>
							<m:Button
								type="Transparent"
								text="Delete"
							/>
							<m:Button
								type="Transparent"
								text="Copy"
							/>
							<m:OverflowToolbarButton
								icon="sap-icon://action"
								type="Transparent"
								text="Share"
								tooltip="action"
							/>
						</actions>
					</ObjectPageDynamicHeaderTitle>
				</headerTitle>
				<headerContent>
					<m:FlexBox
						wrap="Wrap"
						fitContainer="true"
					>
						<m:Avatar
							class="sapUiSmallMarginEnd"
							src="https://www.petz.com.br/blog/wp-content/uploads/2019/04/quantos-anos-vive-um-gatinho.jpg"
							displaySize="L"
						/>
						<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
							<m:ObjectAttribute
								title="{/#Animals/Age/@sap:label}"
								text="{Age}"
							/>
							<m:ObjectAttribute
								title="{/#Animals/Race/@sap:label}"
								text="{Race}"
							/>
						</layout:VerticalLayout>
						<!-- <layout:HorizontalLayout class="sapUiSmallMarginBeginEnd">
							<m:Image src="./test-resources/sap/uxap/images/linkedin.png"/>
							<m:Image
								src="./test-resources/sap/uxap/images/Twitter.png"
								class="sapUiSmallMarginBegin"
							/>
						</layout:HorizontalLayout> -->
						<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
							<m:ObjectAttribute
								title="{/#Animals/Createdon/@sap:label}"
								text="{
									path: 'Createdon',
									type: 'sap.ui.model.type.DateTime',
									formatOptions: {
										style: 'medium'
									}
								}"
							/>
							<!-- <m:VBox>
								<m:Label text="Achieved goals"/>
								<m:ProgressIndicator
									percentValue="30"
									displayValue="30%"
								/>
							</m:VBox> -->
						</layout:VerticalLayout>
						<!-- <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
							<m:Label text="San Jose, USA"/>
						</layout:VerticalLayout> -->
					</m:FlexBox>
				</headerContent>
				<sections>
					<ObjectPageSection
						titleUppercase="false"
						id="create"
						title="{i18n>createOrder}"
					>
						<subSections>
							<ObjectPageSubSection
								id="goalsSS1"
								titleUppercase="false"
							>
								<blocks>
									<m:Table
										id="tableProducts"
										items="{servicesAndProducts>/Products}"
									>
										<m:headerToolbar>
											<m:Toolbar>
												<m:Button
													icon="sap-icon://add"
													text="Row"
													press="addRow"
												/>
												<m:Button
													icon="sap-icon://display"
													text="Row"
													press="fetchRecords"
												/>
											</m:Toolbar>
										</m:headerToolbar>
										<m:columns>
											<m:Column width="50px"/>
											<m:Column>
												<m:Text text="{i18n>category}"/>
											</m:Column>
											<m:Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<m:Text text="{i18n>description}"/>
											</m:Column>
											<m:Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<m:Text text="{i18n>quantity}"/>
											</m:Column>
											<m:Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<m:Text text="{i18n>unit}"/>
											</m:Column>
											<m:Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<m:Text text="{i18n>value}"/>
											</m:Column>
											<m:Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<m:Text text="{i18n>total}"/>
											</m:Column>
										</m:columns>
										<m:items>
											<m:ColumnListItem>
												<m:cells>
													<m:Button
														icon="sap-icon://delete"
														press="deleteRow"
														type="Reject"
													/>
													<!-- <m:Input value="{Category}"/> -->
													<m:ComboBox
														id="multiComboBox"
														customData:hasValue="true"
														value="{servicesAndProducts>Category}"
													>
														<core:Item
															key="1"
															text="ServiÃ§o"
														/>
														<core:Item
															key="2"
															text="Produto"
														/>
													</m:ComboBox>
													<m:Input
														value="{servicesAndProducts>Description}"
														showClearIcon="true"
													/>
													<m:Input
														value="{servicesAndProducts>Quantity}"
														change="_onChangeQuantity"
														type="Number"
														showClearIcon="true"
													/>
													<m:Input value="{servicesAndProducts>Unit}"/>
													<m:Input
														value="{servicesAndProducts>Value}"
														type="Number"
														showClearIcon="true"
														change="_onChangeQuantity"
													/>
													<m:Input
														value="{servicesAndProducts>Total}"
														type="Number"
														showClearIcon="true"
														change="_onChangeTotal"
													/>
													<!-- <m:Input value="{
														parts: [{
															path: 'servicesAndProducts>Value'
														}],
														type: 'sap.ui.model.type.Currency',
														formatOptions: {
															showMeasure: false
														}
													}"/> -->
													<!-- <m:ObjectNumber number="{servicesAndProducts>Total}"/> -->
												</m:cells>
											</m:ColumnListItem>
										</m:items>
									</m:Table>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
					<ObjectPageSection
						titleUppercase="false"
						id="personal"
						title="Personal"
					>
						<subSections>
							<ObjectPageSubSection
								id="personalSS1"
								title="Connect"
								titleUppercase="false"
							>
								<blocks>
									<m:TextArea
										width="100%"
										id="output"
									/>
									<m:Label text="qualquer coisa 1"/>
								</blocks>
							</ObjectPageSubSection>
							<ObjectPageSubSection
								id="personalSS2"
								title="Payment information"
								titleUppercase="false"
							>
								<blocks>
									<m:Label text="qualquer coisa 2"/>
								</blocks>
								<moreBlocks>
									<m:Label text="qualquer coisa3"/>
								</moreBlocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
					<ObjectPageSection
						titleUppercase="false"
						id="employment"
						title="Employment"
					>
						<subSections>
							<ObjectPageSubSection
								id="employmentSS1"
								title="Job information"
								titleUppercase="false"
							>
								<blocks>
									<m:Label text="qualquer coisa 4"/>
								</blocks>
							</ObjectPageSubSection>
							<ObjectPageSubSection
								id="employmentSS2"
								title="Employee Details"
								titleUppercase="false"
							>
								<blocks>
									<m:Label text="qualquer coisa 5"/>
								</blocks>
								<moreBlocks>
									<m:Label text="qualquer coisa 6"/>
								</moreBlocks>
							</ObjectPageSubSection>
							<ObjectPageSubSection
								id="employmentSS3"
								title="Job Relationship"
								titleUppercase="false"
							>
								<blocks>
									<m:Label text="qualquer coisa 7 "/>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
					<ObjectPageSection
						titleUppercase="false"
						id="connections"
						title="Connections"
					>
						<subSections>
							<ObjectPageSubSection
								id="connectionsSS1"
								titleUppercase="false"
							>
								<blocks>
									<m:Label text="qualquer coisa"/>
								</blocks>
							</ObjectPageSubSection>
						</subSections>
					</ObjectPageSection>
				</sections>
				<footer>
					<m:OverflowToolbar>
						<m:ToolbarSpacer/>
						<m:Button
							type="Emphasized"
							text="{i18n>save}"
							press="_saveOrder"
						/>
						<m:Button
							text="{i18n>clear}"
							press="_clearOrderTable"
						/>
					</m:OverflowToolbar>
				</footer>
			</ObjectPageLayout>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>