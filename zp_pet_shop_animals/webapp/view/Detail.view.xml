<mvc:View
	controllerName="petshop.zppetshopanimals.controller.Detail"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc"
>
	<semantic:SemanticPage
		id="detailPage"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}"
	>
		<semantic:titleHeading>
			<Title
				text="{Name}"
				level="H2"
			/>
		</semantic:titleHeading>
		<semantic:headerContent>
			<layout:HorizontalLayout allowWrapping="true">
				<layout:VerticalLayout class="sapUiMediumMarginEnd">
					<ObjectAttribute
						title="{/#Customers/Cpf/@sap:label}"
						text="{Cpf}"
					/>
					<ObjectAttribute
						title="{/#Customers/Telephone/@sap:label}"
						text="{Telephone}"
					/>
					<ObjectAttribute
						title="{/#Customers/Address/@sap:label}"
						text="{Address}"
					/>
				</layout:VerticalLayout>
			</layout:HorizontalLayout>
		</semantic:headerContent>
		<semantic:content>
			<Table
				id="lineItemsList"
				width="auto"
				items="{
					path: 'GetAnimals',
					sorter: {
						path: 'Id',
						descending: false
					}
				}"
				updateFinished=".onListUpdateFinished"
				noDataText="{detailView>/tableNoDataText}"
				busyIndicatorDelay="{detailView>/lineItemTableDelay}"
				mode="MultiSelect"
				growing="true"
				growingScrollToLoad="true"
			>
				<headerToolbar>
					<Toolbar>
						<Title
							id="lineItemsTitle"
							text="{detailView>/lineItemListTitle}"
							titleStyle="H3"
							level="H3"
						/>
						<ToolbarSpacer/>
						<SearchField
							id="searchField"
							tooltip="{i18n>searchByName}"
							placeholder="{i18n>searchByName}"
							enableSuggestions="true"
							search=".onSearch"
						>
							<layoutData>
								<OverflowToolbarLayoutData
									maxWidth="269px"
									priority="NeverOverflow"
								/>
							</layoutData>
						</SearchField>
						<OverflowToolbarButton
							tooltip="Add"
							type="Transparent"
							text="Add"
							icon="sap-icon://add"
							press="_onCreateAnimal"
						/>
						<OverflowToolbarButton
							tooltip="Less"
							type="Transparent"
							text="Less"
							icon="sap-icon://less"
							press="_onDeleteAnimal"
						/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{/#Animals/Id/@sap:label}"/>
					</Column>
					<Column>
						<Text text="{/#Animals/Name/@sap:label}"/>
					</Column>
					<Column>
						<Text text="{/#Animals/Species/@sap:label}"/>
					</Column>
					<Column>
						<Text text="{/#Animals/Race/@sap:label}"/>
					</Column>
					<Column>
						<Text text="{/#Animals/Age/@sap:label}"/>
					</Column>
					<Column>
						<Text text="{/#Animals/Createdon/@sap:label}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem press="onPress" type="Navigation">
						<cells>
							<ObjectIdentifier
								title="{Id}"
								text="{LineItemID}"
							/>
							<Text text="{Name}"/>
							<Text text="{Species}"/>
							<Text text="{Race}"/>
							<Text text="{Age}"/>
							<Text text="{
								path: 'Createdon',
								type: 'sap.ui.model.type.DateTime',
								formatOptions: {
									style: 'medium'
								}
							}
								"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<!--Semantic ShareMenu Buttons-->
		<semantic:closeAction>
			<semantic:CloseAction
				id="closeColumn"
				press=".onCloseDetailPress"
			/>
		</semantic:closeAction>
		<semantic:fullScreenAction>
			<semantic:FullScreenAction
				id="enterFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
				press=".toggleFullScreen"
			/>
		</semantic:fullScreenAction>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction
				id="exitFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
				press=".toggleFullScreen"
			/>
		</semantic:exitFullScreenAction>
		<semantic:titleMainAction>
			<semantic:TitleMainAction
				text="{i18n>edit}"
				press="_onEditCustomer"
			/>
		</semantic:titleMainAction>
		<semantic:deleteAction>
			<semantic:DeleteAction press="_onDeleteCustomer"/>
		</semantic:deleteAction>
	</semantic:SemanticPage>
</mvc:View>