<mvc:View
	controllerName="petshop.zppetshopanimals.controller.Detail"
	xmlns="sap.m"
	xmlns:m="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc"
>
	<semantic:SemanticPage
		id="detailPage"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}"
	>
		<semantic:titleHeading>
			<Title
				text="{Name}"
				level="H2"
			/>
		</semantic:titleHeading>
		<semantic:headerContent>
			<layout:HorizontalLayout allowWrapping="true">
				<ObjectAttribute
					title="{/#Customers/Cpf/@sap:label}"
					text="{Cpf}"
				/>
				<ObjectAttribute
					title="{/#Customers/Telephone/@sap:label}"
					text="{Telephone}"
				/>
				<ObjectAttribute
					title="{/#Customers/Address/@sap:label}"
					text="{Address}"
				/>
			</layout:HorizontalLayout>
			<!-- <m:Button
				text="Edit"
				type="Emphasized"
			/>
			<m:Button
				type="Transparent"
				text="Delete"
			/> -->
		</semantic:headerContent>
		<semantic:content>
			<Table
				id="lineItemsList"
				width="auto"
				items="{GetAnimals}"
				updateFinished=".onListUpdateFinished"
				noDataText="{i18n>detailLineItemTableNoDataText}"
				busyIndicatorDelay="{detailView>/lineItemTableDelay}"
				mode="MultiSelect"
			>
				<headerToolbar>
					<Toolbar>
						<Title
							id="lineItemsTitle"
							text="{detailView>/lineItemListTitle}"
							titleStyle="H3"
							level="H3"
						/>
						<ToolbarSpacer/>
						<OverflowToolbarButton
							tooltip="Add"
							type="Transparent"
							text="Add"
							icon="sap-icon://add"
							press="_onCreateAnimal"
						/>
						<OverflowToolbarButton
							tooltip="Less"
							type="Transparent"
							text="Less"
							icon="sap-icon://less"
							press="_onDeleteAnimal"
						/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column>
						<Text text="{/#Animals/Id/@sap:label}"/>
					</Column>
					<Column>
						<Text text="{/#Animals/Name/@sap:label}"/>
					</Column>
					<Column>
						<Text text="{/#Animals/Species/@sap:label}"/>
					</Column>
					<Column>
						<Text text="{/#Animals/Race/@sap:label}"/>
					</Column>
					<Column>
						<Text text="{/#Animals/Age/@sap:label}"/>
					</Column>
					<Column>
						<Text text="{/#Animals/Createdon/@sap:label}"/>
					</Column>
					<!-- <Column
						minScreenWidth="Tablet"
						demandPopin="true"
						hAlign="End">
						<Text text="{i18n>detailLineItemTableUnitNumberColumn}"/>
					</Column> -->
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier
								title="{Id}"
								text="{LineItemID}"
							/>
							<Text text="{Name}"/>
							<Text text="{Species}"/>
							<Text text="{Race}"/>
							<Text text="{Age}"/>
							<Text text="{
								path: 'Createdon',
								type: 'sap.ui.model.type.DateTime',
								formatOptions: {
									style: 'medium'
								}
							}
								"/>
							<!-- <ObjectNumber
								number="{
									path: 'UnitNumber',
									formatter: '.formatter.currencyValue'
								}"
								unit="{UnitOfMeasure}"/> -->
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<!--Semantic ShareMenu Buttons-->
		<semantic:closeAction>
			<semantic:CloseAction
				id="closeColumn"
				press=".onCloseDetailPress"
			/>
		</semantic:closeAction>
		<semantic:fullScreenAction>
			<semantic:FullScreenAction
				id="enterFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
				press=".toggleFullScreen"
			/>
		</semantic:fullScreenAction>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction
				id="exitFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
				press=".toggleFullScreen"
			/>
		</semantic:exitFullScreenAction>


		<semantic:titleMainAction>
			<semantic:TitleMainAction text="{i18n>edit}"/>
		</semantic:titleMainAction>

		<semantic:deleteAction>
			<semantic:DeleteAction 
			press="_onDeleteCustomer"
			/>
		</semantic:deleteAction>


	</semantic:SemanticPage>
</mvc:View>