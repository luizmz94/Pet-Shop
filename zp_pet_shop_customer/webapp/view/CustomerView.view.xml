<mvc:View
	controllerName="petshop.zppetshopcustomer.controller.CustomerView"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:core="sap.ui.core"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page
					id="page"
					title="{i18n>title}"
				>
					<content>
						<VBox fitContainer="true">
							<smartFilterBar:SmartFilterBar
								id="smartFilterBar"
								entitySet="CustomersSet"
								persistencyKey="SmartFilter_Explored"
								showClearButton="true"
							>
								<smartFilterBar:controlConfiguration>
									<smartFilterBar:ControlConfiguration
										key="Cpf"
										visibleInAdvancedArea="true"
									/>
									<smartFilterBar:ControlConfiguration
										key="Name"
										visibleInAdvancedArea="true"
									/>
									<smartFilterBar:ControlConfiguration
										key="Address"
										visibleInAdvancedArea="true"
									/>
								</smartFilterBar:controlConfiguration>
								<smartFilterBar:layoutData>
									<FlexItemData shrinkFactor="0"/>
								</smartFilterBar:layoutData>
							</smartFilterBar:SmartFilterBar>
							<smartTable:SmartTable
								id="LineItemsSmartTable"
								entitySet="CustomersSet"
								smartFilterId="smartFilterBar"
								tableType="ResponsiveTable"
								useExportToExcel="true"
								beforeExport="onBeforeExport"
								useVariantManagement="false"
								useTablePersonalisation="false"
								header="{i18n>header}"
								showRowCount="true"
								persistencyKey="SmartTableAnalytical_Explored"
								enableAutoBinding="true"
								showFullScreenButton="true"
								class="sapUiResponsiveContentPadding"
								enableAutoColumnWidth="true"
								initiallyVisibleFields="Cpf,Name,Address,Telephone,Action"
							>
								<Table
									id="Table"
									mode="MultiSelect"
								>
									<columns>
										<Column width="80px">
											<customData>
												<core:CustomData
													key="p13nData"
													value='\{"columnKey": "Action", "sortProperty": "Action","filterProperty": "Action", "columnIndex":0}'
												/>
											</customData>
											<Text text="{i18n>action}"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<HBox justifyContent="End">
													<Button
														icon="sap-icon://edit"
														press="handleEditStudent"
													/>
													<Button
														icon="sap-icon://delete"
														press="handleDeleteStudent"
													/>
												</HBox>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
								<smartTable:customToolbar>
									<OverflowToolbar design="Transparent">
										<ToolbarSpacer/>
										<OverflowToolbarButton
											icon="sap-icon://add"
											text="{i18n>create}"
											tooltip="{i18n>create}"
											press="onCreate"
										/>
										<OverflowToolbarButton
											icon="sap-icon://less"
											text="{i18n>delete}"
											tooltip="{i18n>delete}"
											press="onDelete"
										/>
									</OverflowToolbar>
								</smartTable:customToolbar>
								<smartTable:layoutData>
									<FlexItemData
										growFactor="1"
										baseSize="0%"
									/>
								</smartTable:layoutData>
							</smartTable:SmartTable>
						</VBox>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>